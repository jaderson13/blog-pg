<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Blog de artigos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="/styles/home.css" />
</head>

<body>
  <%-include("componentes/header.ejs")%>

    <main>

      <form action="/criarArtigo" method="POST">
        <h4>Criar artigo</h4>
        <label>Título</label>
        <input type="text" name="titulo" required />
        <label>Autor</label>
        <input type="text" name="autor" required />
        <label>Conteúdo</label>
        <textarea name="texto" required></textarea>
        <button>Enviar</button>
      </form>
      
      <section class="artigos">
        <h2>Artigos</h2>
        <ul>
            <%if(locals.artigos){ for(let i=0;i<artigos.length;i++){%>
              <li onmouseover="btn_add()" onmouseout="btn_remover()"> <a href="/abrirArtigo/<%=artigos[i].id%>">
                  <%=artigos[i].titulo%>
                </a> <button title="excluir">
                  <a href="/removerArtigo/<%=artigos[i].id%>">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                      class="bi bi-x-lg" viewBox="0 0 16 16">
                      <path
                        d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                    </svg>
                  </a>
                </button>
              </li>
              <% }}%>
        </ul>
      </section>
      <%-include("componentes/footer.ejs")%>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>

    <script>


      const btn_remover = () => {
        for (let i = 0; i < document.querySelectorAll(".artigos li").length; i++) {
          document.querySelectorAll("ul li button")[i].classList.remove("button");
        }
      }

      const btn_add = () => {
        for (let i = 0; i < document.querySelectorAll(".artigos li").length; i++) {
          document.querySelectorAll("ul li button")[i].classList.add("button");
        }
      }

    </script>
</body>

</html>